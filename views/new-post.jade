extends base

block header
    if user
        .user
            p.email Usuari loguejat: #{user.email}
            a(href='/logout') LOGOUT
    else
        .user
            p.email user no loguejat
            a(href='/login') LOGIN

block content
    section.new-post.container
        h1.section-title= post.date? "Editar Post" : "Nuevo Post"
        form.new-post-form(action=post.date? "/posts/#{post.id}":"/posts", method="POST")
            label(for='title') TÃ­tulo
            input.title(type='text', name='title', value=post.title)
            label(for='post-title') Contenido
            textarea.post-content(name='content', placeholder='')= post.content
            if post.date
                input(type="hidden",name="_method",value="put")
            input.button(type='submit', value='Publicar')
